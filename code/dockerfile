FROM rust:slim-bullseye

# Update default packages
RUN apt-get update && apt-get install --no-install-recommends -y \
    build-essential \
    core-utils \
    curl \
    unzip \
    cabextract \
    aria2 \
    p7zip-full \
    libssl-dev \
    pkg-config \
    python3-dev \
    wimtools \
    chntpw \
    genisoimage \
    file \
    python3-pip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN python3 -m pip install --no-cache-dir tqdm pefile


